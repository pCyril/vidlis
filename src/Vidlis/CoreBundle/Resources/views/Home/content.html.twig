<div id="right_content">
    <div class="presentation">
        <img src="{{ asset('bundles/Vidlis/images/bg.jpg') }}" width="100%"/>
        <div class="titleSearch">
        <h2>Découvrez une nouvelle façon d'écouter la musique gratuitement</h2>
        <div class="searchZoneHome">
            <form class="formSearchHome" id="formSearchHome">
            <div class="search-input-bg">
                <input type="text" placeholder="Rechercher votre musique" name="q" id="q" autocomplete="off" class="search-input ui-autocomplete-input">
            </div>
            </form>
        </div>
        </div>
        <div id="feeds">
            {% if connected == false %}
            <a href="{{ path('fos_user_registration_register') }}" class="btn-register-home toModalHTML">Créer un compte gratuitement</a>
            {% endif %}
            <h3>Dernières vidéos regardées</h3>
            {% for videoPlayed in videosPlayed %}
                <div class="boxplayed" data-id="{{ videoPlayed[0].idVideo }}">
                    <div class="videoTitle">{{ videoPlayed[0].idVideo|videoTitle }}</div>
                    <div class="clear"></div>
                    <div class="images">
                        <img src="{{ videoPlayed[0].idVideo|videoImage }}">
                    </div>
                    <div class="vote"><div class="like" style="width: {{ videoPlayed[0].idVideo|videoPercentageLike }}%"></div></div>
                    <div class="counts">
                        <div class="likeCount"><i class="fa fa-thumbs-up"></i>{{ videoPlayed[0].idVideo|videoLikeCount }}</div>
                        <div class="dislikeCount"><i class="fa fa-thumbs-down"></i>{{ videoPlayed[0].idVideo|videoDislikeCount }}</div>
                    </div>
                    <div class="buttonPlay"></div>
                </div>
            {% endfor %}
        </div>
    </div>
</div>
{% include 'VidlisCoreBundle:Default:menu.html.twig'%}